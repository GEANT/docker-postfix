#!/usr/bin/env bash
# shellcheck shell=bash

# Remove existing client_access
rm /etc/postfix/client_access
touch /etc/postfix/client_access

# Import fail2ban entries into client_access
# TODO

# Import local entries into client_access
if [ -f /etc/postfix/tables/client_access ]; then
  echo "" >> /etc/postfix/client_access
  cat /etc/postfix/tables/client_access >> /etc/postfix/client_access
  echo "" >> /etc/postfix/client_access
fi

# Postmap the file
postmap /etc/postfix/client_access
