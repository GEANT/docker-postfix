#!/usr/bin/env bash
# shellcheck shell=bash

if [ "${ENABLE_POSTGREY}" = "true" ]; then

  # Fail on error
  set -e

  # Download latest file
  curl --location --output "/tmp/postgrey_whitelist_client.new.gz" "${POSTGREY_SOURCE_URL}"

  # Unzip
  gunzip /tmp/postgrey_whitelist_client.new.gz

  # Move downloaded file to final location
  mv "/tmp/postgrey_whitelist_client.new" "${POSTGREY_SYSTEM_WHITELIST_FILE}"

fi